<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="igus_rebel">
	<xacro:macro name="igus_rebel_description">
		<link name="base_link">
			<visual>
				<geometry>
					<mesh filename="file://$(find igus_rebel_description_ros2)/meshes/new/Joint0.dae" />
				</geometry>
			</visual>
			<collision>
				<geometry>
					<mesh filename="file://$(find igus_rebel_description_ros2)/meshes/new/Joint0.dae" />
				</geometry>
			</collision>
			<material name="black">
				<color rgba="${0/255} ${0/255} ${0/255} 1.0" />
			</material>
			<inertial>
				<mass value="1.0" />
				<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
			</inertial>
		</link>
		<joint name="joint1" type="revolute">
