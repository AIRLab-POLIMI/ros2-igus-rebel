			<child link="link_1" />
			<origin rpy="0.0 0.0 0.0" xyz="0.0 0 0.100" />
			<axis xyz="0 0 -1" />
			<limit effort="330.0" lower="${-pi*179/180}" upper="${pi*179/180}" velocity="${pi*45/180}" />
		</joint>
		<link name="link_1">
			<visual>
				<geometry>
